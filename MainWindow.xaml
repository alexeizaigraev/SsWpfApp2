                <MenuItem Header="Отделения" Click="Col1Departments_Click"></MenuItem>
                <MenuItem Header="Партнёры" Click="Col1Partners_Click"></MenuItem>
                <MenuItem Header="Папки" Click="Col1Folders_Click"></MenuItem>
            </MenuItem>

            <MenuItem Header="Обнови" FontSize="24">
                <MenuItem Header="db -> gdrive" Click="RefreshDbToGrive_Click"></MenuItem>
                <MenuItem Header="gdrive -> db" Click="RefreshGdriveToDb_Click"></MenuItem>
                <MenuItem Header=" Из акцесс" Click="RefreshFromAccess_Click"></MenuItem>
            </MenuItem>

        </Menu>

        <ListBox x:Name="listBox1" Grid.Column="9" Grid.Row="2" Grid.RowSpan="19" SelectionMode="Extended" FontSize="28" Foreground="#FF542CBF" Background="#FF92E7F0"/>

        <TextBox x:Name="textBox1" Grid.Column="1" Grid.Row="1" Grid.RowSpan="12" Grid.ColumnSpan="7" FontSize="28" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Foreground="#FF542CBF" Background="#FF92E7F0"/>
        <TextBox x:Name="textBoxFname" Grid.Column="1" Grid.Row="14" Grid.RowSpan="3" Grid.ColumnSpan="7" FontSize="28" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Foreground="Blue" Background="#FF92E7F0"/>
        <TextBox x:Name="textBoxErr" Grid.Column="1" Grid.Row="18" Grid.RowSpan="3" Grid.ColumnSpan="7" FontSize="28" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Foreground="Red" Background="#FF92E7F0"/>

        <Button x:Name="ButtonClear" Content="Очисти" Grid.Column="9" Grid.Row="1" Click="ButtonClear_Click" Height="45" FontSize="24" Background="#FF1DF091"/>

        <Button x:Name="ButtonOtborListTerm" Content="Выбери" Grid.Column="9" Grid.Row="22" Click="ButtonChoise_Click" Height="43" FontSize="24" Background="#FF8FE9F1"/>

        <Label x:Name="labeInfo" Content="labeInfo" Grid.Column="1" Grid.Row="22" FontSize="24" Background="#FF5AF619" HorizontalAlignment="Left" Height="40" Margin="39,0,0,0" VerticalAlignment="Center"/>
